<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_alignParentTop="true"
    android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_wavecima" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginVertical="635dp"
        android:src="@drawable/ic_wavebaixo"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="25dp"
        android:text="HEALT CALC"
        android:textSize="38sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginStart="450dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/peso"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="155dp"
        android:layout_marginStart="20dp"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faça login para continuar"
        android:layout_marginTop="190dp"
        android:layout_marginStart="20dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_email"
        android:background="@drawable/activity_border"
        android:hint="E-mail"
        android:padding="20dp"
        android:drawablePadding="10dp"
        android:inputType="text"
        />


    <EditText
        android:id="@+id/senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_password"
        android:background="@drawable/activity_border"
        android:hint="Senha"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:inputType="numberPassword"
        />
    <Button
        android:id="@+id/button_entrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Entrar"
        android:textSize="18dp"
        android:layout_marginTop="380dp"
        android:padding="15dp"
        />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lembrar-me"
        android:layout_marginTop="430dp"
        android:layout_marginStart="285dp"
        android:layout_marginEnd="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esqueci a senha"
        android:layout_marginTop="460dp"
        android:layout_marginStart="290dp"
        android:layout_marginEnd="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Não tem uma conta?"
        android:layout_marginTop="480dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar uma conta agora"
        android:layout_marginTop="480dp"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desenvolvido por DS2M-B"
        android:layout_marginTop="715dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="90dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />



</RelativeLayout>